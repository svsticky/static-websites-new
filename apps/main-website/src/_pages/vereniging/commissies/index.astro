<style>

main {
  width: 90%;
  max-width: 70rem;
  margin: 0 auto;
  padding-bottom: 4rem;
  color: #242424;
}

/* ======================= */
/*   TITEL                 */
/* ======================= */

.section-title {
  text-align: center;
  margin-top: 3rem;
  margin-bottom: 2rem;
}

.section-title h1 {
  font-size: 2rem;
  font-weight: 800;
  margin-bottom: 0.5rem;
}

/* ======================= */
/*  COMMISSIE GRID         */
/* ======================= */

.comm-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
}

@media (max-width: 900px) {
  .comm-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 600px) {
  .comm-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* ======================= */
/*  CARD STYLING           */
/* ======================= */

.comm-card {
  background: white;
  border-radius: 1rem;
  padding: 1.3rem 0.8rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  color: #242424;
  box-shadow: 0 0.8rem 1.5rem rgba(0,0,0,0.06);
  transition: 0.2s ease;
}

.comm-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 1rem 2rem rgba(0,0,0,0.12);
}

/* LOGO */
.comm-card img {
  width: 70%;
  height: 80px;
  object-fit: contain;
  margin-bottom: 1rem;
}

/* NAAM */
.comm-card p {
  font-weight: 700;
  font-size: 1rem;
  background: rgba(0,0,0,0.05);
  padding: 0.4rem 0.6rem;
  border-radius: 0.4rem;
}

</style>
