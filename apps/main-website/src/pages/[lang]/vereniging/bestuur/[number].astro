---
import Layout from "../../../../components/Layout.astro";
import type { Config, Media } from "@svsticky/content"
import sdk from "../../../../sdk";
import { convertLexicalToHTML } from "@payloadcms/richtext-lexical/html";

export const getStaticPaths = () => (
  sdk.find({ collection: "main-board", select: { board_number: true }, draft: false })
     .then(resp => {
        const latestBoard = Math.max(...resp.docs.map(doc => doc.board_number));
        return resp.docs.flatMap(({ board_number: number }) => [
          {params: {lang: "nl", number}, props: {isLast: number === latestBoard}},
          {params: {lang: "en", number}, props: {isLast: number === latestBoard}}
        ])
      }));
const { lang, number } = Astro.params as { lang: Config["locale"], number: number };
const { isLast } = Astro.props as { isLast: boolean };

const board = (await sdk.find({ collection: "main-board", where: { board_number: { equals: number } }, locale: lang })).docs[0];
---

<Layout title={`${lang === "nl" ? "Bestuur" : "Board"} ${board.board_number}`}>
  <main>
    <div class="board-card">

      <!-- TITEL -->
      <div class="board-header">
        <h1 class="board-title">{`${isLast ? "Huidig bestuur" : "Bestuur"} ${board.board_number}`}</h1>
        <p class="year">{board.year}</p>
      </div>

      <div class="board-content">

        <!-- FOTO + v.l.n.r. -->
        <div class="photo-wrapper">
          <img 
            src={(board.picture as Media).url}
            alt={(board.picture as Media).alt}
          />
          <p class="vlnr">{(board.picture as Media).alt}</p>
        </div>

        <!-- TEKST RECHTS -->
        <div class="board-text">

          <!-- O.d.z. -->
          <div class="info-block">
            <h3>O.d.z.</h3>
            <p><i>"{board.zinspreuk}"</i></p>
          </div>

          <!-- Bestuursleden -->
          <div class="info-block">
            <h3>Bestuursleden</h3>
            <ul>
              {board.board_members.map(member => (
                <li>{member.name} - {member.function}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>

      <!-- NAVIGATIEKNOPPEN BUITEN DE KAART -->
    <div class="board-nav">
      {board.board_number == 1 ? "" : 
        <a href={`/${lang}/vereniging/bestuur/${board.board_number - 1}`} class="nav-btn back">
          <i class="fas fa-arrow-left"></i>
          Bestuur {board.board_number - 1}
        </a>}
      <a href="/nl/vereniging/bestuur" class="nav-btn back">Terug naar overzicht</a>
      {isLast ? "" :
        <a href={`/${lang}/vereniging/bestuur/${board.board_number + 1}`} class="nav-btn back">
          Bestuur {board.board_number + 1}
          <i class="fas fa-arrow-right"></i>
        </a>}
    </div>

    <!-- ===== CONTACT CARDS  ===== -->
    {!board.enable_personal_texts ? "" :
      <div class="member-cards">
        {board.board_members.map((member, index) => 
          <div class={`member-card ${index % 2 === 0 ? "left" : "right"}`}>
            <img src={(member.picture! as Media).url} alt={(member.picture! as Media).alt}>
            <div class="member-info">
              <h4>{member.name} - {member.function}</h4>
              <div set:html={convertLexicalToHTML({ data: member.description! })}></div>
            </div>
          </div>
        )}
      </div>
    }
  </main>
</Layout>

<style define:vars={{ boardColour: board.colour }}>

/* PAGINA LAYOUT */
main {
  width: 90%;
  max-width: 70rem;
  margin: 0 auto;
  padding-bottom: 4rem;
  color: #242424;
}

/* ======================= */
/*  WITTE KAART            */
/* ======================= */

.board-card {
  background: white;
  padding: 2.5rem 2.5rem;
  border-radius: 1.2rem;
  box-shadow: 0 1rem 2rem rgba(0,0,0,0.06);
  margin-bottom: 3rem;
  margin-top: 3rem;
}

/* HEADER */
.board-header {
  margin-bottom: 1.6rem;
}

.board-title {
  margin: 0;
  font-size: 2rem;
  font-weight: 800;
  color: var(--boardColour);
}

.year {
  margin-top: 0.3rem;
  font-size: 1.05rem;
  opacity: 0.7;
}

/* ======================= */
/* GRID                    */
/* ======================= */

.board-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2.2rem;
  align-items: start;
}

/* FOTO */
.photo-wrapper img {
  width: 100%;
  border-radius: 0.8rem;
  object-fit: cover;
}

.vlnr {
  margin-top: 0.5rem;
  text-align: center;
  font-style: italic;
  opacity: 0.8;
  font-size: 0.95rem;
}

/* ======================= */
/* INFO-BLOKKEN            */
/* ======================= */

.info-block {
  margin-bottom: 1.8rem;
  padding-bottom: 0.8rem;
}

.info-block h3 {
  margin: 0;
  font-size: 1.35rem;
  font-weight: 800;
  color: var(--boardColour);
}

.info-block ul {
  padding: 0;
}

.info-block li {
  margin: 0.4rem 0 0;
  font-size: 1rem;
  line-height: 1.4;
  list-style-type: none;
}

/* ======================= */
/* NAVIGATIEKNOPPEN        */
/* ======================= */

.board-nav {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.nav-btn {
  background: #fa6b20;
  color: white;
  padding: 0.8rem 1.6rem;
  border-radius: 0.6rem;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.2s;
}

.nav-btn:hover {
  background: #ff5a01;
}


/* ======================= */
/* CONTACT CARDS B20       */
/* ======================= */

.member-cards {
  margin-top: 3rem;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.member-card {
  display: flex;
  align-items: center;
  gap: 1.6rem;
  padding: 1.4rem 1.6rem;
  border-radius: 1rem;
  background: white;
  box-shadow: 0 1rem 2rem rgba(0,0,0,0.06);
}


.member-card img {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid var(--boardColour);
}

/* TEKST */
.member-info h4 {
  margin: 0;
  font-size: 1.2rem;
  font-weight: 800;
  color: var(--boardColour);
}

.member-info p {
  margin: 0.4rem 0 0;
  opacity: 0.85;
  line-height: 1.45;
}

/* LINKS / RECHTS AFWISSELING */
.member-card.left {
  flex-direction: row; /* foto links */
}

.member-card.right {
  flex-direction: row-reverse; /* foto rechts */
  text-align: right;
}

/* MOBIEL */
@media (max-width: 700px) {
  .member-card,
  .member-card.right,
  .member-card.left {
    flex-direction: column;
    text-align: center;
  }

  .member-card img {
    margin-bottom: 0.8rem;
  }
}



/* MOBIEL */
@media (max-width: 800px) {

  .board-content {
    grid-template-columns: 1fr;
  }

  .board-header {
    text-align: center;
  }

  .info-block,
  .board-text h3 {
    text-align: center;
  }
}

</style>
