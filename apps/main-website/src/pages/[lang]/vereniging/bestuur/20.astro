---
import Layout from "../../../../components/Layout.astro";
import type { Config } from "@svsticky/content"
export const getStaticPaths = () => [{params: {lang: "nl"}}, {params: {lang: "en"}}];
const { lang } = Astro.params as { lang: Config["locale"] };
---

<Layout title={lang === "nl" ? "Bestuur 20" : "Board 20"}>
  <main>

    <!-- WITTE KAART -->
    <div class="board-card">

      <!-- TITEL -->
      <div class="board-header">
        <h1 class="board-title">Bestuur 20</h1>
        <p class="year">2025 - 2026</p>
      </div>

      <div class="board-content">

        <!-- FOTO + v.l.n.r. -->
        <div class="photo-wrapper">
          <img 
            src="https://images.ctfassets.net/7cqe14fu3dhm/6kKdSfoXGJkc7hE1RkBW0k/7e1d03c82e13485c7746fdb677314b01/B20_Vo.jpg"
            alt="Bestuur 20"
          />
          <p class="vlnr">v.l.n.r. Jari, Rens, Bram, Iris, Chion, Isabelle</p>
        </div>

        <!-- TEKST RECHTS -->
        <div class="board-text">

          <!-- O.d.z. -->
          <div class="info-block">
            <h3>O.d.z.</h3>
            <p><i>"Met elkaar, Mooie momenten"</i></p>
          </div>

          <!-- Bestuursleden -->
          <div class="info-block">
            <h3>Bestuursleden</h3>
            <p>Iris van der Zwart - Voorzitter</p>
            <p>Bram de Haas - Secretaris</p>
            <p>Chion Craane - Penningmeester</p>
            <p>Rens van Moorsel - Commissaris Intern</p>
            <p>Isabelle Wittebols - Commissaris Extern</p>
            <p>Jari van Polen - Commissaris Onderwijs</p>
          </div>

        </div>

      </div>

    </div>

      <!-- NAVIGATIEKNOPPEN BUITEN DE KAART -->
    <div class="board-nav">
      <a href="/nl/vereniging/bestuur/19" class="nav-btn back">← Bestuur 19</a>
      <a href="/nl/vereniging/bestuur" class="nav-btn back">Terug naar overzicht</a>
    </div>

    <!-- ===== CONTACT CARDS  ===== -->
    <div class="member-cards">

      <div class="member-card left">
        <img src="https://images.ctfassets.net/7cqe14fu3dhm/3UxjxH6ludmzNRaNvxvR7M/edb3e3fe4563a0323f723713dc15be56/IMG_0610.jpg" alt="Iris">
        <div class="member-info">
          <h4>Iris van der Zwart - Voorzitter</h4>
          <p>Korte persoonlijke tekst over Iris. Dit kan gaan over motivatie, doelen of bestuursstijl.</p>
        </div>
      </div>

      <div class="member-card right">
        <img src="https://images.ctfassets.net/7cqe14fu3dhm/65ym4CVbwpeqCnYxg9RCO7/0c866b042a74135423bebd523e2c6217/ingezoomd.jpeg" alt="Bram">
        <div class="member-info">
          <h4>Bram de Haas - Secretaris</h4>
          <p>Korte tekst over Bram. Bijvoorbeeld zijn rol in communicatie of administratie.</p>
        </div>
      </div>

      <div class="member-card left">
        <img src="https://images.ctfassets.net/7cqe14fu3dhm/6nu3c30UudemRTUnYab9tD/afc5657b765dbb9cccc40951f8d7865d/IMG_0752.jpg" alt="Chion">
        <div class="member-info">
          <h4>Chion Craane - Penningmeester</h4>
          <p>Korte tekst over Chion. Bijvoorbeeld over financiën, begroting, begrotingsdiscipline.</p>
        </div>
      </div>

      <div class="member-card right">
        <img src="https://images.ctfassets.net/7cqe14fu3dhm/52FJixMzQLFKXtpb57OnD3/b53cd8cef341a401eb232964accdf9db/IMG_0453.jpg" alt="Rens">
        <div class="member-info">
          <h4>Rens van Moorsel - Commissaris Intern</h4>
          <p>Korte tekst over Rens. Activiteiten, intern contact, sfeerteam, dat soort dingen.</p>
        </div>
      </div>

      <div class="member-card left">
        <img src="https://images.ctfassets.net/7cqe14fu3dhm/2nfB8jr2o4XTS5WvMN9B87/7b0b3b6955d119e7d9f90e532940b451/bestuursfoto_isabelle.jpg" alt="Isabelle">
        <div class="member-info">
          <h4>Isabelle Wittebols - Commissaris Extern</h4>
          <p>Tekst over Isabelle. Verenigingen, sponsoren, externe contacten.</p>
        </div>
      </div>

      <div class="member-card right">
        <img src="https://images.ctfassets.net/7cqe14fu3dhm/WOQBKUGWYr6vAFlGu9t9f/4eb9c73c64aae4ba03555145382583ad/IMG_0364.jpg" alt="Jari">
        <div class="member-info">
          <h4>Jari van Polen - Commissaris Onderwijs</h4>
          <p>Korte tekst over Jari. Onderwijszaken, cursusevaluaties, universiteitscontacten.</p>
        </div>
      </div>

    </div>

  </main>
</Layout>

<style>

/* PAGINA LAYOUT */
main {
  width: 90%;
  max-width: 70rem;
  margin: 0 auto;
  padding-bottom: 4rem;
  color: #242424;
}

/* ======================= */
/*  WITTE KAART            */
/* ======================= */

.board-card {
  background: white;
  padding: 2.5rem 2.5rem;
  border-radius: 1.2rem;
  box-shadow: 0 1rem 2rem rgba(0,0,0,0.06);
  margin-bottom: 3rem;
  margin-top: 3rem;
}

/* HEADER */
.board-header {
  margin-bottom: 1.6rem;
}

.board-title {
  margin: 0;
  font-size: 2rem;
  font-weight: 800;
  color: #fa6b20;
}

.year {
  margin-top: 0.3rem;
  font-size: 1.05rem;
  opacity: 0.7;
}

/* ======================= */
/* GRID                    */
/* ======================= */

.board-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2.2rem;
  align-items: start;
}

/* FOTO */
.photo-wrapper img {
  width: 100%;
  border-radius: 0.8rem;
  object-fit: cover;
}

.vlnr {
  margin-top: 0.5rem;
  text-align: center;
  font-style: italic;
  opacity: 0.8;
  font-size: 0.95rem;
}

/* ======================= */
/* INFO-BLOKKEN            */
/* ======================= */

.info-block {
  margin-bottom: 1.8rem;
  padding-bottom: 0.8rem;
}

.info-block h3 {
  margin: 0;
  font-size: 1.35rem;
  font-weight: 800;
  color: #fa6b20;
}

.info-block p {
  margin: 0.4rem 0 0;
  font-size: 1rem;
  line-height: 1.4;
}

/* ======================= */
/* NAVIGATIEKNOPPEN        */
/* ======================= */

.board-nav {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.nav-btn {
  background: #fa6b20;
  color: white;
  padding: 0.8rem 1.6rem;
  border-radius: 0.6rem;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.2s;
}

.nav-btn:hover {
  background: #ff5a01;
}


/* ======================= */
/* CONTACT CARDS B20       */
/* ======================= */

.member-cards {
  margin-top: 3rem;
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.member-card {
  display: flex;
  align-items: center;
  gap: 1.6rem;
  padding: 1.4rem 1.6rem;
  border-radius: 1rem;
  background: white;
  box-shadow: 0 1rem 2rem rgba(0,0,0,0.06);
}


.member-card img {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  object-fit: cover;
  border: 3px solid #fa6b20;
}

/* TEKST */
.member-info h4 {
  margin: 0;
  font-size: 1.2rem;
  font-weight: 800;
  color: #fa6b20;
}

.member-info p {
  margin: 0.4rem 0 0;
  opacity: 0.85;
  line-height: 1.45;
}

/* LINKS / RECHTS AFWISSELING */
.member-card.left {
  flex-direction: row; /* foto links */
}

.member-card.right {
  flex-direction: row-reverse; /* foto rechts */
  text-align: right;
}

/* MOBIEL */
@media (max-width: 700px) {
  .member-card,
  .member-card.right,
  .member-card.left {
    flex-direction: column;
    text-align: center;
  }

  .member-card img {
    margin-bottom: 0.8rem;
  }
}



/* MOBIEL */
@media (max-width: 800px) {

  .board-content {
    grid-template-columns: 1fr;
  }

  .board-header {
    text-align: center;
  }

  .info-block,
  .board-text h3 {
    text-align: center;
  }
}

</style>
